# Production Environment Variables
# Copy this file to .env.prod and fill in your values

# Database
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db:5432/ai_visibility_tracker

# Redis
REDIS_URL=redis://redis:6379

# Authentication - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Encryption (for session tokens) - Generate keys with:
# ENCRYPTION_KEY: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# ENCRYPTION_IV: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_KEY=your_encryption_key_here
ENCRYPTION_IV=your_encryption_iv_here

# Server
PORT=3001
NODE_ENV=production
FRONTEND_URL=http://YOUR_SERVER_IP:8080

# Puppeteer
PUPPETEER_HEADLESS=true
BROWSER_POOL_SIZE=2
SCAN_DELAY_MIN_MS=3000
SCAN_DELAY_MAX_MS=8000
PROMPT_TIMEOUT_MS=120000

# Screenshot storage
SCREENSHOT_DIR=/app/screenshots

# Optional API Keys (add your own)
# SERP_API_KEY=your_serp_api_key
# OPENAI_API_KEY=your_openai_api_key
