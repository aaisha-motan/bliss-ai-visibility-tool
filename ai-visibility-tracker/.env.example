# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_visibility_tracker
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Encryption (for storing session tokens)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here
ENCRYPTION_IV=your-16-byte-hex-iv-here

# SERP API
SERP_API_KEY=your-serpapi-key-here

# OpenAI API (for auto-generating prompts from keywords)
# Optional - falls back to template-based generation if not set
OPENAI_API_KEY=your-openai-api-key-here

# Puppeteer
PUPPETEER_HEADLESS=true
BROWSER_POOL_SIZE=2
SCAN_DELAY_MIN_MS=3000
SCAN_DELAY_MAX_MS=8000
PROMPT_TIMEOUT_MS=60000

# Storage
SCREENSHOT_DIR=./screenshots
MAX_SCREENSHOT_SIZE_MB=5

# Server
PORT=3001
FRONTEND_URL=http://localhost:5173
NODE_ENV=development
